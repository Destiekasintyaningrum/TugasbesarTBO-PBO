<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1D2247"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENKRIPSI PESAN"
            android:textColor="#ffffff"
            android:layout_gravity="center"

            />

        <EditText
            android:id="@+id/formkunci"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#ffffff"
            android:ems="30"
            android:inputType="textPersonName"
            android:hint="Masukan Kunci Enkripsi"
            />
        <EditText
            android:id="@+id/formpesan"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#ffffff"
            android:ems="30"
            android:inputType="textPersonName"
            android:hint="Masukan Pesan"
            />
        <EditText
            android:id="@+id/formhasilenkripsi"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#ffffff"
            android:ems="30"
            android:inputType="textPersonName"
            android:hint="Hasil Enkripsi"
            />

        <Button
            android:id="@+id/enkripsipesan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="#ffffff"

            android:text="ENKRIPSI" />




    </LinearLayout>

</android.support.constraint.ConstraintLayout>